<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:padding="@dimen/list_item_padding">

    <ImageView
            android:id="@+id/destination_icon"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/track_car"
            android:contentDescription="@string/destination_icon"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

    <TextView
            android:id="@+id/destination_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Terminal A"
            android:textStyle="bold"
            android:textAppearance="?android:textAppearanceMedium"
            android:layout_marginLeft="@dimen/text_label_margin"
            app:layout_constraintLeft_toRightOf="@id/destination_icon"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

    <TextView
            android:id="@+id/destination_distance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="32 Meters"
            app:layout_constraintLeft_toLeftOf="@id/destination_name"
            app:layout_constraintTop_toBottomOf="@id/destination_name"
            app:layout_constraintBottom_toBottomOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>